<!DOCTYPE html>
<html lang="nl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Radiant Squad Page</title>
    <link rel="stylesheet" href="style.css">
  <script src="script.js" defer></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=chat_paste_go_2" />
</head>

<div class="chatContainer">
  <div class="closeChat">x</div>
  {% comment %} Berichten {% endcomment %}
<section class="messagesContainer">
  <div class="messages">
{% for message in messages %}
  <p><span class="student" style="color:{{ person.fav_color }};" >{{ message.from }}</span>: {{ message.text }} <span class="timestamp"> | {{ message.created | date: '%d-%m-%Y %H:%M' }}</span>
</p>
{% else %}
  <p>Er zijn nog geen berichten voor dit team.</p>
{% endfor %}
</div>
</section>

<form method="POST" action="/" class="inputFields">
  <label>
    Naam:
        <input type="text" name="from" required placeholder="Typ je naam...">
</label>
  <label>
    Bericht:
    <input type="text" name="text" required placeholder="Typ je bericht...">
  </label>
  <button type="submit">
    <span class="material-symbols-outlined">
chat_paste_go_2
</span>
  </button>
</form>

</div>

{% comment %} Personen grid {% endcomment %}
<section class="grid">
  {% for person in persons %}
    <article class="person-card">
      <a href="/student/{{ person.id }}" class="person-frame">
        {% if person.name == 'Yassir Bouyi' %}
          <img src="images/temp.png">
        {% else %}
          <img src="{% if person.mugshot %}https://fdnd.directus.app/assets/{{ person.mugshot }}?width=500{% elsif person.avatar %}{{ person.avatar }}{% else %}img/placeholder.png{% endif %}" alt="Profiel foto van {{ person.name }}">
        {% endif %}
      </a>
      <div class="person-info">
        <h3>{{ person.name }}</h3>
        <p>{{ person.vibe_emoji }}  {{ person.id }} {{ person.fav_emoji }} </p>
      </div>
    </article>
  {% endfor %}
</section>